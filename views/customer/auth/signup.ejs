<%- include('../../shared/includes/head', { pageTitle: 'Inregistrare' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Creaza un cont nou</h1>
    <% if (inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Input</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <label for="email">E-Mail</label>
        <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
      </p>
      <p>
        <label for="confirm-email">Confirma Email</label>
        <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
      </p>
      <p>
        <label for="password">Parola</label>
        <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
      </p>
      <hr>
      <p>
        <label for="fullname">Nume Complet</label>
        <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
      </p>
      <p>
        <label for="street">Strada</label>
        <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
      </p>
      <p>
        <label for="postal">Cod Postal</label>
        <input 
          type="text" 
          id="postal" 
          name="postal" 
          minlength="5" 
          maxlength="5" 
          value="<%= inputData.postal %>"
          required>
      </p>
      <p>
        <label for="city">Oras</label>
        <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
      </p>
      <p>
        <label for="tel">Telefon</label>
        <input type="tel" id="tel" name="tel" value="<%= inputData.tel %>" required>
      </p>
      <button class="btn" id="login-singup">Creaza cont</button>
      <p id="switch-form" class="logsig" ><a href="/login">Conecteaza-te </a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>